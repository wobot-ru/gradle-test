<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>ru.wobot</groupId>
    <artifactId>gradle-test</artifactId>
    <packaging>jar</packaging>
    <version>1.0</version>
    <name>gradle-test</name>
    <url>http://maven.apache.org</url>

    <scm>
        <connection>scm:git:git@github.com/wobot-ru/gradle-test</connection>
        <developerConnection>scm:git:git@github.com/wobot-ru/gradle-test</developerConnection>
        <url>https://github.com/wobot-ru/gradle-test</url>
      <tag>release-1.0</tag>
  </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <junit.version>4.8.1</junit.version>
        <hamcrest.version>1.3</hamcrest.version>
        <mockito.version>1.9.0</mockito.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.5.3</version>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                    <!--<mavenExecutorId>forked-path</mavenExecutorId>-->
                    <tagNameFormat>release-@{project.version}</tagNameFormat>
                    <preparationGoals>clean test</preparationGoals>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>snapshots</id>
            <name>snapshots</name>
            <url>http://artifactory.wobot.local/artifactory/libs-snapshot-local</url>
        </repository>
    </distributionManagement>

</project>
